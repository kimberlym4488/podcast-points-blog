{{! sample code for the next page the user is taken to after logging in }}
<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
/>

<h2 class="text-center">The place for Podcast enthusiasts.
  <br />
  <h3>Love it? Hate it? Rate it!</h3>
</h2>

<div
  class="row row-cols-1 row-cols-md-2 row-cols-lg-4 row-cols-xl-4 g-0 p-0 m-0"
>
  <div class="col">
    <div class="card border-0">
      <div class="card-body ">
        <h5 class="card-title bg-light">Search Podcasts + Reviews</h5>
        <p class="card-text">
          Find existing reviews and favorites to explore.</p>
        
          <button type="submit" id="searchButton" class="submitBtn btn btn-md btn-dark">
            <i
              class="bi bi-search text-center"
              alt="search-image"
              style="font-size: 1rem; color: #62bbc1"
            ></i>
            Search</button>
     
      </div>
    </div>
  </div>

  <div class="col">
    <div class="card border-0">

      <div class="card-body ">
        <h5 class="card-title bg-light">Create a Podcast Review</h5>
        <p class="card-text">Share a review on a podcast you love... or just
          love to hate.</p>
     
          <button type="submit" id="createButton"
              href="api//shareit" class="submitBtn btn btn-md btn-dark">
            <i
              class="bi bi-plus-circle text-center"
              alt="search-image"
              style="font-size: 1rem; color: #62bbc1"
            ></i>
            Create</button>
     
      </div>
    </div>
  </div>

  <div class="col">
    <div class="card border-0">
      <div class="card-body ">
        <h5 class="card-title bg-light">My Reviews </h5>
        <p class="card-text">View, edit, or delete your existing podcast
          reviews.</p>
        
          <button type="submit" id="updateButton" class="submitBtn btn btn-md btn-dark">
            <i
              class="bi bi-pencil-fill text-center"
              alt="share-image"
              style="font-size: 1rem; color: #62bbc1"
            ></i>
            Update</button>
       
      </div>
    </div>
  </div>

  <div class="col">
    <div class="card border-0">
      <div class="card-body ">
        <h5 class="card-title bg-light">Share with friends</h5>
        <p class="card-text">Podcast of the Month club, anyone?</p>
       
          <button type="submit" id="shareButton" class="submitBtn btn btn-md btn-dark">
            <i
              class="bi bi-share-fill text-center"
              alt="share-image"
              style="font-size: 1rem; color: #62bbc1"
            ></i>
            Share</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/homepage.js"></script>