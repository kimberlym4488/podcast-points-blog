<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Podcast of the Month</title>
    {{! Local Styling }}
    <link rel="stylesheet" href="/css/jass.css" />
    <link rel="stylesheet" href="/css/style.css" />

    {{! Bootstrap Icon and Styling }}
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
    />

    {{! jquery min script }}
    <script
      src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"
    ></script>
    {{! Bootstrap Script }}

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"
    ></script>

  </head>

  <body>

    <nav class="sticky-top align-items-center">
      <div
        class="align-items-center p-3"
        style="font-weight:light; color:#009ecc; font-size:1.5rem"
      >
        <a href="/potm">
          Podcast of the Month</a>
      </div>

      <a class="homeButton" style="font-size:1.25rem" href="/">Home</a>
      {{#if loggedIn}}
        <a
          class="logoutButton"
          style="font-size:1.25rem"
          href="#"
          id="logout"
        >Logout</a>
      {{else}}
        <a class="loginButton" style="font-size:1.25rem" href="/login">Login</a>
      {{/if}}
    </nav>

    <main class="container mt-3">
      {{{body}}}
    </main>

    <footer class="text-center bg-light pt-3">
      <p class="mb-0" style="font-size:.75rem"> Made by Kim Moran</p>
      <p>
        <a
          class="bi bi-github p-1"
          style=" font-size:1.5rem; color:black; background-color:transparent"
          href="https://github.io/kimberlym4488"
        ></a>

        <a
          class="bi bi-envelope-open-heart p-1"
          style=" font-size:1.5rem; color:black; background-color:transparent"
          href="mailto:kmorandev@gmail.com"
        ></a>

        <a
          class="bi bi-linkedin p-1"
          style="font-size:1.5rem; color:black; background-color:transparent"
          href="https://linkedin.com/kim-moran-82158371/"
        ></a>
      </p>

    </footer>

    {{#if loggedIn}}
      <script src="/js/logout.js"></script>
    {{/if}}
    <link
      rel="stylesheet"
      type="text/css"
      href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css"
    />
    <script
      type="text/javascript"
      src="https://cdn.jsdelivr.net/npm/toastify-js"
    ></script>
    <script src="/js/toast.js"></script>
  </body>

</html>